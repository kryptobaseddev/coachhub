{
  "extends": "./.svelte-kit/tsconfig.json", // Re-add the SvelteKit-specific configuration
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "verbatimModuleSyntax": true // Required for TypeScript with Svelte
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
